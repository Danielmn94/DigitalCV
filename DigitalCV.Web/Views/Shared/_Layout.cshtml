<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - DigitalCV</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<div class="container">

		@if (ViewBag.ShowNavbar != false)
		{
			<nav class="navbar navbar-expand-lg navbar-light">
				<a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">Digital CV</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
					<div class="navbar-nav topnav-centered">
						<a class="nav-item education nav-link" asp-controller="Dashboard" asp-action="Education">Uddannelser</a>
						<a class="nav-item workexp nav-link" asp-controller="Dashboard" asp-action="WorkExperience">Erhvervserfaring</a>
						<a class="nav-item itexp nav-link" asp-controller="Dashboard" asp-action="ComputerTechnology">IT</a>
						<a class="nav-item misc nav-link" asp-controller="Dashboard" asp-action="MiscellaneousInfo">Andet information</a>
						<div class="dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Bruger: @this.User.Identity.Name
							</a>
							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
								<a class="dropdown-item" asp-controller="Identity" asp-action="LogOut"> Log ud</a>
							</div>
						</div>
					</div>
				</div>
			</nav>
		}

		@RenderBody()

	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://kit.fontawesome.com/893b94a8df.js" crossorigin="anonymous"></script>
	@RenderSection("Scripts", required: false)

</body>
</html>