@model IEnumerable<DigitalCV.Web.Models.ViewModels.WorkExperience.WorkExperienceViewModel>

<div class="jumbotron boxcolor whitefont">
	<div class="row" style="font-size:18px; color:#01A1BB; border-bottom: 1px solid #01a1bb">
		<div class="col-4">
			År
		</div>
		<div class="col-8">
			Arbejdsplads
		</div>
	</div>

	<div class="row">
		@foreach (var workexp in Model)
		{
			<div class="col-4">
				@workexp.TimePeriod
			</div>
			<div class="col-8">
				@workexp.NameOfCompany<br />
				<a style="font-size:14px">@workexp.WorkingAs</a>
				<br /> <br />
				<ul style="list-style-type:disc; font-size:13px">
					@for (int i = 0; i < 4; i++)
					{
						<li>@workexp.KeyAreasSplitted[i]</li>
					}
				</ul>
			</div>
		}
	</div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
	$(document).ready(function () {
		$('.navbar-nav .workexp').addClass('active');
	});
</script>