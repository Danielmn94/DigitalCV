					<div class="form-group">
						<label>Sprog</label>
						<input asp-for="LanguageText" class="formcontrol form-control" autocomplete="off">
					</div>

					<div class="form-group">
						<label>Sprog niveau</label>
						<input asp-for="LevelOfLanguage" class="formcontrol form-control" autocomplete="off">
					</div>

					@Html.Hidden("Id")

					<div class="form-group">
						<button class="loginbutton btn btn-primary" name="button">@Model.ButttonText</button>
					</div>

