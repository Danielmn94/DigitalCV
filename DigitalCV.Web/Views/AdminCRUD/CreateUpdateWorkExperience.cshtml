@model DigitalCV.Web.Models.ViewModels.Admin.AdminWorkExperienceViewModel

@{
	ViewData["Title"] = "Ændre erhvervserfaring";
}

<nav class="navbar navbar-expand-lg navbar-light">
	<a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">Digital CV</a>
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
		<div class="navbar-nav">
			<a class="nav-item education nav-link" asp-controller="Admin" asp-action="Education">Ændre uddannelser</a>
			<a class="nav-item education active nav-link" asp-controller="Admin" asp-action="WorkExperience">Ændre erhvervserfaring</a>
			<a class="nav-item education nav-link" asp-controller="Admin" asp-action="ComputerTechnology">Ændre IT</a>
			<a class="nav-item education nav-link" asp-controller="Admin" asp-action="MiscellaneousInfo">Ændre andre information</a>
		</div>
	</div>
</nav>

<div class="d-flex justify-content-center">
	<div class="card boxcolor col-6">
		<div class="card-body cardbody whitefont">
			<form asp-controller="@Model.AspController" asp-action="@Model.AspAction" method="post" novalidate>

				<div class="form-group">
					<label>År</label>
					<input asp-for="TimePeriod" class="formcontrol form-control" autocomplete="off">
				</div>

				<div class="form-group">
					<label>Arbejdsplads</label>
					<input asp-for="NameOfCompany" class="formcontrol form-control" autocomplete="off">
				</div>

				<div class="form-group">
					<label>Stilling</label>
					<input asp-for="WorkingAs" class="formcontrol form-control" autocomplete="off">
				</div>

				<div class="form-group">
					<label>Nøgleområder</label>
					<textarea class="form-control" asp-for="KeyAreas" rows="3"></textarea>
				</div>

				@Html.Hidden("Id")

				<div class="form-group">
					<button class="loginbutton btn btn-primary" name="button">@Model.ButttonText</button>
				</div>

			</form>
		</div>
	</div>
</div>